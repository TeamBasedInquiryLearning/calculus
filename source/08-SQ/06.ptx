                          --({\x+1}, {4*0.75^(\x+3)})--({\x+1}, {4*0.75^(\x+4)})}
                          --(10,0)
                          --cycle;
                          
                          
                          \draw[red] (6,4*0.8^9)\foreach \x in {6,...,9}{
                          --({\x+1}, {4*(0.8^(\x+3))})--({\x+1}, {4*0.8^(\x+4)})};
                          \draw[blue] (6,0)--(6,4*0.8^9);
                          \foreach \x in {6,...,9}{
                          \draw[red]  ({\x+1}, {4*0.8^(\x+4)})--({\x+1}, {0});}
                          
                          \draw[red, fill, opacity=0.2] (6,0)--(6,4*0.8^9)\foreach \x in {6,...,9}{
                          --({\x+1}, {4*0.8^(\x+3)})--({\x+1}, {4*0.8^(\x+4)})}
                          --(10,0)
