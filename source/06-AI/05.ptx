                                domain=0:4,
                                ] (\x,{(\x)^(0.5) });
                            \draw plot [
                                samples=100,
                                domain=0:4,
                                ] (\x,{-1*(\x)^(0.5) });   
                            \draw (4,-2) -- (4,2);
                            

                            \fill [blue, domain=0:4, variable=\x, opacity=0.2]
                              (0, 0)
                              -- plot ({\x}, {sqrt(\x)})
                              --(4,-2)
                              --plot ({\x}, {-1*sqrt(\x)})
                              -- cycle;

                        \end{tikzpicture}
                        </latex-image>
                    </image>
            </figure>
                </p>
            </statement>
        </fact>
        
