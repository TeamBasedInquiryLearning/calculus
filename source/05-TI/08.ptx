                          \fill [orange, domain=0.25:1, variable=\x, opacity=0.2]
                              (0, 0)
                              -- (0, 4)
                              -- plot ({\x}, {1/\x})
                              --(1,0)
                              -- cycle;
                            \draw[orange] (1, 1) --node[ right]{\tiny$f(x)$} (1,1); 
                            \draw[red] plot [
                                samples=100,
                                domain=0.175:1,
                                ] (\x,{0.7/\x });
                            \draw[blue] plot [
                                samples=100,
                                domain=0.325:1,
                                ] (\x,{1.3/\x });  
                            \draw[blue] (1, 1.3) --node[ right]{\tiny $h(x)$} (1,1.3);    
